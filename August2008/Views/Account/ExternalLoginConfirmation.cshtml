@model August2008.Models.RegisterUser

@section MainSection {
    @Html.ValidationSummary()
    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new {ReturnUrl = ViewBag.ReturnUrl})) {
        <fieldset>
            <legend>Confirmation Form</legend>
            <table>
                <tr>
                    <td>                                            
                        <div class="editor-label">
                            @Html.LabelFor2(m => m.Email)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.Email)
                        </div>            
                        <div class="editor-label">
                            @Html.LabelFor2(m => m.DisplayName)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.DisplayName)
                        </div>            
                        <div class="editor-label">
                            @Html.LabelFor2(m => m.Gender)
                        </div>
                        <div class="editor-field">
                            @Html.DropDownListFor(m => m.Gender, new SelectList(new string[] { "", "Male", "Female", "Other", Model.Gender}))
                        </div>                        
                        <div class="editor-label">
                            @Model.Provider 
                            @Html.LabelFor2(m => m.SocialLink)
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(m => m.SocialLink)
                        </div>
                    </td>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor2(m => m.Password)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.Password)
                        </div>      
                        <div class="editor-label">
                            @Html.LabelFor2(m => m.ConfirmPassword)
                        </div>
                        <div class="editor-field">
                            @Html.PasswordFor(m => m.ConfirmPassword)
                        </div>                                             
                    </td>
                </tr>
            </table>
            @Html.HiddenFor(m => m.ProviderId)
            @Html.HiddenFor(m => m.UserId)
            <input type="submit" name="action" value="Confirm" />
            <input type="submit" name="action" value="Cancel" />
        </fieldset>
    }
}
