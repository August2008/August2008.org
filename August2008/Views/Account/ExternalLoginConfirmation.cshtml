@model August2008.Models.RegisterUser

@Html.ValidationSummary()

<div class="section transp shadow soldier-1 padding-50">
    @using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
     
        @Html.HiddenFor(m => m.UserId)
        <fieldset>
            <legend>Confirm Your Identity</legend>
            <div class="editor-label">
                @Html.LabelFor2(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.Email)
            </div>
            <div class="editor-label">
                @Html.LabelFor2(m => m.DisplayName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(m => m.DisplayName)
            </div>
            <br />
            <button type="submit" name="action" class="btn btn-inverse">Confirm</button>
            <button type="submit" name="action" class="btn">No, that's not me!</button>
        </fieldset>
    }
</div>
