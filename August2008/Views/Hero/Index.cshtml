@model August2008.Model.Hero

@section HeaderScriptSection 
{
    @Scripts.Render("~/bundles/hero")
}

@section MainSection 
{
    <div id="hero-dialog"></div>  
    <input type="button" id="createButton" value="Create"/>  
   
}
@section FooterSection{
}
@section BottomScriptSection
{
